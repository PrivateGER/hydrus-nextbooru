# Booru Environment Configuration
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# Database Configuration
# Generate a strong password: openssl rand -base64 32
POSTGRES_USER=booru
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=booru

# Site Configuration
ADMIN_PASSWORD=supersecretpassword # Minimum 16 characters
HIDE_POSTS_WITH_TAGS= # All posts containing any of these tags (comma seperated) will be fully hidden from view
TAG_BLACKLIST= # Hide all tags matching any of these tags (comma seperated). Supports wildcards

# Hydrus Integration
HYDRUS_API_URL=http://localhost:45869
HYDRUS_API_KEY=your_hydrus_api_key_here

# Keep this path the same if using Docker stack
HYDRUS_FILES_PATH=/hydrus
