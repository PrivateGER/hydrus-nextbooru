{
  "name": "nextbooru",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "test": "cross-env NODE_OPTIONS='--no-webstorage' vitest run",
    "test:watch": "cross-env NODE_OPTIONS='--no-webstorage' vitest",
    "test:ui": "cross-env NODE_OPTIONS='--no-webstorage' vitest --ui --api 3001",
    "test:coverage": "cross-env NODE_OPTIONS='--no-webstorage' vitest run --coverage",
    "test:coverage:ui": "cross-env NODE_OPTIONS='--no-webstorage' vitest --ui --api 3001 --coverage",
    "test:sync": "cross-env NODE_OPTIONS='--no-webstorage' vitest run src/lib/hydrus/sync",
    "test:integration": "cross-env NODE_OPTIONS='--no-webstorage' vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "cross-env NODE_OPTIONS='--no-webstorage' vitest --config vitest.integration.config.ts",
    "test:perf": "cross-env NODE_OPTIONS='--no-webstorage' vitest run --config vitest.perf.config.ts",
    "test:perf:large": "cross-env NODE_OPTIONS='--no-webstorage' PERF_DATASET_SIZE=large vitest run --config vitest.perf.config.ts",
    "test:all": "npm run test && npm run test:integration"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@tailwindcss/typography": "^0.5.19",
    "blurhash": "^2.0.5",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "isomorphic-dompurify": "^2.33.0",
    "marked": "^17.0.1",
    "next": "16.0.10",
    "p-limit": "^7.2.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.0",
    "sharp": "^0.34.5",
    "sql-formatter": "^15.6.12"
  },
  "devDependencies": {
    "@prisma/client": "^7.0.1",
    "@tailwindcss/postcss": "^4",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.4",
    "msw": "^2.12.3",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.1.0",
    "tailwindcss": "^4",
    "testcontainers": "^11.9.0",
    "typescript": "^5",
    "vitest": "^4.0.14",
    "vitest-mock-extended": "^3.1.0"
  }
}
