{
  "name": "nextbooru",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "test": "cross-env NODE_OPTIONS='--no-webstorage' vitest run",
    "test:watch": "cross-env NODE_OPTIONS='--no-webstorage' vitest",
    "test:ui": "cross-env NODE_OPTIONS='--no-webstorage' vitest --ui --api 3001",
    "test:coverage": "cross-env NODE_OPTIONS='--no-webstorage' vitest run --coverage",
    "test:coverage:ui": "cross-env NODE_OPTIONS='--no-webstorage' vitest --ui --api 3001 --coverage",
    "test:sync": "cross-env NODE_OPTIONS='--no-webstorage' vitest run src/lib/hydrus/sync",
    "test:integration": "cross-env NODE_OPTIONS='--no-webstorage' vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "cross-env NODE_OPTIONS='--no-webstorage' vitest --config vitest.integration.config.ts",
    "test:perf": "cross-env NODE_OPTIONS='--no-webstorage' vitest run --config vitest.perf.config.ts",
    "test:perf:large": "cross-env NODE_OPTIONS='--no-webstorage' PERF_DATASET_SIZE=large vitest run --config vitest.perf.config.ts",
    "test:all": "npm run test && npm run test:integration"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.212.0",
    "@opentelemetry/instrumentation": "^0.212.0",
    "@opentelemetry/sdk-logs": "^0.212.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@tailwindcss/typography": "^0.5.19",
    "@vercel/otel": "^2.1.0",
    "blurhash": "^2.0.5",
    "dotenv": "^17.3.1",
    "fluent-ffmpeg": "^2.1.3",
    "isomorphic-dompurify": "^2.36.0",
    "marked": "^17.0.2",
    "next": "^16.1.6",
    "p-limit": "^7.3.0",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "sql-formatter": "^15.7.1"
  },
  "devDependencies": {
    "@prisma/client": "^7.4.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^20.19.33",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "memfs": "^4.56.10",
    "msw": "^2.12.10",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.0",
    "tailwindcss": "^4.1.18",
    "testcontainers": "^11.11.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "overrides": {
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3"
  }
}
